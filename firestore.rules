rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Allow signed-in users to list/read/delete transactions (for admin panel to manage store orders),
    // but only the owner can update.
    // Anyone can create a transaction (for storefront orders).
    match /artifacts/{appId}/users/{userId}/transactions/{transactionId} {
      allow list, get, delete: if isSignedIn();
      allow update: if isOwner(userId);
      allow create: if true; // Allows storefront to create orders for any user
    }

    // PUBLIC COLLECTIONS
    // Allow anyone to read products, but only signed-in users can manage them.
    match /artifacts/{appId}/products/{productId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // Allow anyone to read customers, but only signed-in users can manage them.
    match /artifacts/{appId}/customers/{customerId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }
    
    // Allow anyone to read categories, but only signed-in users can manage them.
    match /artifacts/{appId}/product-categories/{categoryId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // Allow anyone to read optionals, but only signed-in users can manage them.
    match /artifacts/{appId}/optionals/{optionalId} {
      allow get, list: if true;
      allow create, update, delete: if isSignedIn();
    }

    // Settings can be read by anyone (for PIX key) but only managed by signed-in users.
    match /artifacts/{appId}/settings/app {
      allow get: if true;
      allow write: if isSignedIn();
    }
    
    // This collection group query allows an admin to query across all users' transactions,
    // which is necessary for the store orders page.
    match /{path=**}/transactions/{transactionId} {
      allow list: if isSignedIn() && request.query.limit <= 200;
    }
  }
}
